<style>

    a {
        color: black;
        text-decoration: none;
    }
    a:hover {
        background-color: black;
        color: white;
    }

    .grid {
    display: grid;
    grid-template-columns: auto auto auto;
    /* border: 3px solid black;  */
    }

    .button_to {
        background-color: white;
        height: 175px;
        padding: 1px;
        /* border: 1.2px solid black;
        outline: 3px solid black; */
    }

    <% fill_color = @plan.location.color %>

    .selected_fill {
        background-color: <%= fill_color %>;
        height: 100%;
        width: 100%;
        border: none;
    }

    .unselected_fill_1, .unselected_fill_2, .unselected_fill_3, .unselected_fill_4, .unselected_fill_5, .unselected_fill_6, .unselected_fill_7, .unselected_fill_8, .unselected_fill_9  {
        height: 100%;
        width: 100%;
        border: none;
    }

    .unselected_fill_1:hover {
        background-color: Red;
        box-shadow: 0 0 50px Red;
        outline: none;
        cursor: cell;
    }

    .unselected_fill_2:hover {
        background-color: Aqua;
        box-shadow: 0 0 50px Aqua;
        outline: none;
        cursor: cell;
    }

    .unselected_fill_3:hover {
        background-color: SaddleBrown;
        box-shadow: 0 0 50px SaddleBrown;
        outline: none;
        cursor: cell;
    }

    .unselected_fill_4:hover {
        background-color: DarkGreen;
        box-shadow: 0 0 50px DarkGreen;
        outline: none;
        cursor: cell;
    }

    .unselected_fill_5:hover {
        background-color: Yellow;
        box-shadow: 0 0 50px Yellow;
