        cursor: cell;
    }

    .unselected_fill_6:hover {
        background-color: Purple;
        box-shadow: 0 0 50px Purple;
        outline: none;
        cursor: cell;
    }

    .unselected_fill_7:hover {
        background-color: DarkBlue;
        box-shadow: 0 0 50px DarkBlue;
        outline: none;
        cursor: cell;
    }

    .unselected_fill_8:hover {
        background-color: DeepPink;
        box-shadow: 0 0 50px DeepPink;
        outline: none;
        cursor: cell;
    }

    .unselected_fill_9:hover {
        background-color: DarkOrange;
        box-shadow: 0 0 50px DarkOrange;
        outline: none;
        cursor: cell;
    }

</style>

<div align="center">
    <img src="/assets/waldude-logo.png" alt="Waldude Logo" class="logo" height="250" background-color="transparent">
    <h2><%= link_to "Find", shows_path, method: :get %> or <%= link_to "Plan", plans_path, method: :get %></h2>
    <%= @plan.attendee.name %>'s Plan #<%= link_to @plan.id, plan_path(@plan), method: :get %> for Show #<%= link_to @plan.show.id, show_path(@plan.show.id), method: :get %> at <%= @plan.location.color %> of <%= @plan.show.artist.name %> on <%= @plan.show.stage.name %> Stage at <%= @plan.show.date_time.strftime("%B %e, %l:%M %p") %><br><br>
</div>

